import java.util.Scanner;
class Velocity {
    public static void main(String[] args) {int kmPerHour;
    double mPers;
    double milesPerMin;
    
    {
        System.out.println("enter the value in km:");
        Scanner scan = new Scanner(System.in);
       kmPerHour= scan.nextInt();
        mPers=(0.2777)*kmPerHour;
        System.out.println("the velocity in m/s is :" + mPers); 
        milesPerMin=(0.015625)*kmPerHour;
        System.out.println("the velocity in miles/min is :" + milesPerMin);  
    }
    }
}
